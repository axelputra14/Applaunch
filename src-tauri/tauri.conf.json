{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "Applaunch",
    "version": "0.0.0"
  },
  "tauri": {
    "allowlist": {
      "http": {
        "all": true,
        "request": true,
        "scope": ["http://*"]
      },
      "all": false,
      "shell": {
        "sidecar": true,
        "scope": [
          {
            "name": "binaries/server",
            "sidecar": true
          }
        ],
        "all": true,
        "execute": true,
        "open": true
      }
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": false,
        "title": "applaunch",
        "width": 1600,
        "height": 900
      }
    ],
    "security": {
      "csp": null
    },
    "bundle": {
      "active": true,
      "externalBin": ["binaries/server"],
      "targets": "all",
      "identifier": "com.applaunch.dev",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    }
  }
}
